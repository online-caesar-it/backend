{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@env/*": ["env/*"],
      "@server/*": ["server/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@handlers/*": ["handlers/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"]
    },
    "outDir": "dist",
    "rootDir": "./src" 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
