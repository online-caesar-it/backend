{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@server/*": ["src/server/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "@handlers/*": ["src/handlers/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@db/*": ["src/db/*"],
      "@routes/*": ["src/routes/*"]
    },
    "outDir": "dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
